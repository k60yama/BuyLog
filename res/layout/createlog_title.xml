<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
   <TextView 
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/createLogTitle"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/createlog_pencil"
        android:drawablePadding="10dip" />
    <ImageButton
        android:src="@drawable/createlog_back_stateful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:padding="15dip"
        android:background="@drawable/createlog_bg_stateful"
        android:onClick="finishActivity" />
    <ImageButton
        android:id="@+id/save"
        android:src="@drawable/createlog_save_stateful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dip"
        android:background="@drawable/createlog_bg_stateful"
        android:onClick="onSave" />
</RelativeLayout>